<!--if it is in current working directory?-->

  <xacro:property name="pi" value="3.1415" />

  <xacro:property name="width" value=".5" />
  <xacro:property name="lenght" value="2" />
  <xacro:property name="height" value=".2" />


  <material name="blue">
    <color rgba="0 0 .8 1"/>
  </material>  

  <link name="box">
    <visual>
      <geometry>
        <box size="${width} ${lenght} ${height}"/>
      </geometry>
      <material name="blue"/>
      <origin xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="${width} ${lenght} ${height}"/>
      </geometry>
    </collision>
    <xacro:default_inertial mass="100"/>
  </link>

  <xacro:arm prefix="right" />
  <xacro:arm prefix="left" />

</robot>
